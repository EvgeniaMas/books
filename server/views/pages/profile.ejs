<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <% include ../partials/stylesheet %>
</head>
<body>
    <% include ../partials/header %>

    <div class="container  appName">
        <h1><%= title %></h1>
        <div class="datails">

            <div class="card text-xs-center appName">
                <br>
                <!-- <img class="card-img-top" src="<%= avatar %>" alt="Card image cap"> -->
                <div class="card-block">
                   
                    <p class="card-text">
                        <strong>Name</strong>: <%= user.local.name %><br>
                        <strong>Email</strong>: <%= user.local.email %>
                    </p>
                    <a href="/logout" class="btn btn-large btn-primary">Logout</a>
                     <button class="btn btn-large btn-primary"  data-toggle="modal" data-target="#editProfile">Update your personal information</button>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
                <button type="button" class="btn btn-success pull-right" data-toggle="modal" >
                    Image Upload
                </button>
                
            </div>
   <br>
   <br>
   <div class="row">
            
            <% books.forEach(function(books){ %>
           
                    <figure class="figure">
                        
                        <h4><%= books.title %></h4>
                        <p> <%= books.author %> </p>
                        <p> <%= books.description %> </p>
                        <img src=<%= books.thumbnail %>>
                      
                    </figure>
                </div>
               
            <% }); %>
         
   </div>


</div>
        <% include ../partials/footer %>
        <% include ../partials/javascript %>



<div class="modal fade" id="editProfile" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form action="/updates" method="post">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel">Edit your personal information</h4>
                        </div>

                        <div class="modal-body">

                                                        
                            <fieldset class="form-group">
                                <label  for="inputContent">New Users name</label>
                                <textarea id="inputContent" name="content" rows="1" cols="40" class="form-control" required=""><%= user.local.name %></textarea>
                            </fieldset>

                            <fieldset class="form-group">
                                <label  for="inputContent">New Users email</label>
                                <textarea id="inputContent" name="content" rows="1" cols="40" class="form-control" required=""><%= user.local.email %></textarea>
                            </fieldset>

                            <fieldset class="form-group">
                                <label  for="inputContent">Enter your old password</label>
                                <textarea id="inputContent" name="content" rows="1" cols="40" class="form-control" required=""></textarea>
                            </fieldset>

                            <fieldset class="form-group">
                                <label  for="inputContent">Enter new password</label>
                                <textarea id="inputContent" name="content" rows="1" cols="40" class="form-control" required=""></textarea>
                            </fieldset>
                            



                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>









 
    </body>
    </html>
